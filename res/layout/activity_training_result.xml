<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".TrainingResultActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/list_states"
            android:padding="15dp" >

            <TextView
                android:id="@+id/training_result_stats_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="STATS"
                android:textColor="@color/default_blue"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/training_result_stats_title"
                android:layout_marginTop="15dp"
                android:text="Running Time"
                android:textColor="@color/card_text"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/training_result_stats_title"
                android:layout_marginTop="40dp"
                android:text="Distance"
                android:textColor="@color/card_text"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/training_result_stats_title"
                android:layout_marginTop="65dp"
                android:text="Burned Calories"
                android:textColor="@color/card_text"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/training_result_stats_title"
                android:layout_marginTop="90dp"
                android:text="Number of Steps"
                android:textColor="@color/card_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/training_result_running_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/training_result_stats_title"
                android:layout_marginTop="15dp"
                android:text="16:43"
                android:textColor="@color/card_text_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/training_result_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/training_result_stats_title"
                android:layout_marginTop="40dp"
                android:text="1,708 km"
                android:textColor="@color/card_text_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/training_result_cal_burned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/training_result_stats_title"
                android:layout_marginTop="65dp"
                android:text="203 cal"
                android:textColor="@color/card_text_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/training_result_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/training_result_stats_title"
                android:layout_marginTop="90dp"
                android:text="213"
                android:textColor="@color/card_text_light"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/list_states"
            android:padding="15dp" >

            <TextView
                android:id="@+id/training_result_pet_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="PET"
                android:textColor="@color/default_blue"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/training_result_pet_title"
                android:layout_marginTop="15dp"
                android:text="Monster Defeated"
                android:textColor="@color/card_text"
                android:textSize="20sp" />

            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/training_result_pet_title"
                android:layout_marginTop="40dp"
                android:text="MONSTERS"
                android:textColor="@color/card_text"
                android:textSize="30sp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/training_result_pet_title"
                android:layout_marginTop="80dp"
                android:text="Training Exp."
                android:textColor="@color/card_text"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/training_result_pet_title"
                android:layout_marginTop="105dp"
                android:text="Total Exp."
                android:textColor="@color/card_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/training_result_monster_defeated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/training_result_pet_title"
                android:layout_marginTop="15dp"
                android:text="5"
                android:textColor="@color/card_text_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/training_result_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/training_result_pet_title"
                android:layout_marginTop="80dp"
                android:text="213.024 pt"
                android:textColor="@color/card_text_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/training_result_total_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/training_result_pet_title"
                android:layout_marginTop="105dp"
                android:text="311.203 pt"
                android:textColor="@color/card_text_light"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:weightSum="100" >

            <Button
                android:id="@+id/share_button"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/default3_button_states"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="20sp" />
            
            <Button
                android:id="@+id/continue_button"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/default_button_states"
                android:text="Continue"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>