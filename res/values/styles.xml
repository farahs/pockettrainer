<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:style/Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MainTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MainActionBar</item>
        <!-- other activity and action bar styles here -->
    </style>

    <!-- style for the action bar backgrounds -->
    <style name="MainActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/default_blue</item>
        <item name="android:backgroundStacked">@color/default_blue</item>
        <item name="android:backgroundSplit">@color/default_blue</item>
        <item name="android:actionBarTabTextStyle">@style/CustomTabTextStyle</item>
        <item name="android:icon">@drawable/ic_launcher</item>        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="CustomTabTextStyle" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">#2456c2</item>
    </style>

    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>